/* General body styles */
/* General body styles */
body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: url('https://source.unsplash.com/random/1920x1080') no-repeat center center fixed;
    background-size: cover;
    margin: 0;
    padding: 20px;
    color: #333;
}

/* Styling the header */
h1 {
    text-align: center;
    color: #007BFF;
    margin-bottom: 30px;
}

/* Styling each request container */
.request {
    background-color: rgba(255, 255, 255, 0.9);
    padding: 20px;
    margin-bottom: 30px;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease-in-out;
    display: flex;
    align-items: center;
    justify-content:space-around;
    text-align: left;
}

.request:hover {
    transform: scale(1.02);
}

/* Styling the images */
.request img {
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    margin-left: 20px;
}

/* Additional spacing and text styling */
.request p {
    margin: 0;
    font-size: 18px;
    color: #555;
    max-width: 40%;
}



    </style>
</head>
<body>
    <h1>list of requests for certificates</h1>
    <% items.forEach((item) => { %>
        <div class="request">
            <%= item.message %>
            <img src="./images/<%=item.picture%>" alt="" height="300" width="300">
            <form action="/cdel" method="post">
                  <input type="checkbox" name="checkbox" class="checkbox" value="<%= item._id %>"  onChange="this.form.submit()" >
                 <h5>mark this as accuired</h5>
                </form>
        </div>
   <% }); %>
</body>
