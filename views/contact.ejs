}

.member:hover {
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
}

h2 {
    color: #2980b9;
    font-size: 1.8em;
    margin-bottom: 10px;
}

p {
    color: #7f8c8d;
    font-size: 1.1em;
    margin: 5px 0;
}

@media (max-width: 768px) {
    .about-us {
        padding: 20px;
    }
    
    h1 {
        font-size: 2em;
    }
    
    h2 {
        font-size: 1.5em;
    }
    
    p {
        font-size: 1em;
    }
}


