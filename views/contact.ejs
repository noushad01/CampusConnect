}

h1 {
    margin-bottom: 30px;
    color: #2c3e50;
    font-size: 2.5em;
    text-transform: uppercase;
    letter-spacing: 2px;
    position: relative;
}

h1::after {
    content: '';
    width: 100px;
    height: 3px;
    background: #2c3e50;
    display: block;
    margin: 10px auto;
}

.member {
    margin-bottom: 40px;
    padding: 20px;
